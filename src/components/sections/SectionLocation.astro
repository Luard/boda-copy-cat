<style>
  .section-location {
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 100%;
    min-height: 100vh;
    overflow: hidden;
    padding: 2rem;
    background-color: rgba(255, 255, 255, 0.01);
  }

  h2 {
    font-size: 3rem;
    margin-bottom: 4rem;
    color: var(--secondary-color);
    text-align: center;
    font-weight: 400;
    letter-spacing: 1px;
    position: relative;
    display: block;
    width: 100%;
  }
  
  .content {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    max-width: 1200px;
  }

  h3 {
    font-size: 1.2rem;
    margin: 0 0 0.6rem 0;
    color: var(--secondary-color);
    font-weight: 500;
    letter-spacing: 0.5px;
    text-transform: uppercase;
    opacity: 0.85;
  }

  .info-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    max-width: 1200px;
    width: 100%;
    align-items: center;
  }

  .info-text {
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  .info-item {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    position: relative;
    transition: transform 0.3s ease;
  }

  .info-item:not(:last-child)::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 70px;
    right: 0;
    height: 1px;
    background: linear-gradient(to right, var(--primary-color) 5%, transparent);
    opacity: 0.2;
  }

  .info-item:hover {
    transform: translateX(5px);
  }

  .info-icon {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    position: relative;
    background: transparent;
    border: 1px solid rgba(var(--primary-color-rgb), 0.15);
  }

  .info-icon::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    border-radius: 50%;
    background: radial-gradient(circle at center, rgba(var(--primary-color-rgb), 0.05) 0%, transparent 70%);
  }

  .icon-content {
    font-size: 1.8rem;
    position: relative;
    z-index: 2;
  }

  .info-content {
    flex: 1;
    padding-top: 0.3rem;
  }

  .info-link, .info-value {
    font-size: 1.4rem;
    line-height: 1.5;
    display: inline-block;
    font-weight: 400;
    color: var(--text-color);
  }

  .info-link {
    text-decoration: none;
    position: relative;
    transition: all 0.3s ease;
  }

  .link-content {
    position: relative;
    display: inline-block;
    border-bottom: 1px solid transparent;
    transition: all 0.3s ease;
  }

  .info-link:hover .link-content {
    color: var(--primary-color);
    border-bottom-color: var(--primary-color);
  }

  .tooltip {
    display: block;
    font-size: 0.85rem;
    color: var(--primary-color);
    opacity: 0.7;
    font-weight: normal;
    margin-top: 0.5rem;
    font-style: italic;
    transition: all 0.3s ease;
  }

  .info-link:hover .tooltip {
    opacity: 1;
    transform: translateX(5px);
  }

  .map-container {
    height: 380px;
    border-radius: 8px;
    overflow: hidden;
    position: relative;
    box-shadow: 
      0 15px 35px rgba(0, 0, 0, 0.1),
      0 3px 10px rgba(0, 0, 0, 0.05);
  }

  .map-container::after {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: 8px;
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.3);
    pointer-events: none;
    z-index: 1;
  }

  @media (max-width: 768px) {
    .section-location {
      padding: 3rem 1rem;
      height: auto;
    }

    .info-container {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    h2 {
      font-size: 2.2rem;
      margin-bottom: 3rem;
    }

    h3 {
      font-size: 1rem;
    }

    .info-item {
      gap: 0.8rem;
    }

    .info-icon {
      width: 50px;
      height: 50px;
    }

    .icon-content {
      font-size: 1.4rem;
    }

    .info-link, .info-value {
      font-size: 1.2rem;
    }

    .map-container {
      display: none;
      height: 280px;
      margin-top: 1rem;
    }

    .info-text {
      gap: 1rem;
    }
    
    .info-item:not(:last-child)::after {
      left: 60px;
    }
  }
</style>