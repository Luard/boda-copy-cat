---
import ScrollArrow from './../ScrollArrow.astro';
import { translations } from '../../i18n/translations';

type SupportedLanguages = keyof typeof translations;
const { lang = 'es' } = Astro.props;
const t = translations[lang as SupportedLanguages];
---

<section class="section-main">
  <div class="content fade-in">
    <div class="names-container">
      <h1>{t['wedding.Luard'] || 'Luard'} <span class="y">{t['wedding.y'] || 'y'}</span> {t['wedding.Nataly'] || 'Nataly'}</h1>
    </div>
    <div class="divider">
      <img src="/images/heart-divider.png" alt={t['others.divider.alt']} class="icon-image">
    </div>
    <div class="date-container">
      <div class="date-line">
        <span class="date-label">{t['date.day'] || 'JUEVES'}</span>
        <span class="date-number">11</span>
        <span class="date-label">{t['date.year'] || '2025'}</span>
      </div>
      <div class="date-month">{t['date.month'] || 'SEPTIEMBRE'}</div>
    </div>
    <!--
    <div class="venue-container">
      <div class="venue-line"></div>
      <p class="venue-name">Masia Piguillem</p>
      <div class="venue-line"></div>
    </div>
     -->
  </div>
  <ScrollArrow/>
  
</section>

<style>
  .section-main {
    height: 100vh;
    width: 100%;
    text-align: center;
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 2rem;
    min-width: 100%;
    min-height: 100vh;
    overflow: hidden;
    }

  .icon-image {
    max-width: 100%;
    max-height: 100%;
  }

  .content {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    max-width: 90%;
    margin: 0 auto;
  }

  .names-container {
    margin-bottom: 2rem;
  }

  h1 {
    font-size: 8rem;
    color: #000;
    font-family: 'Eyesome', 'Better Saturday Personal Use', cursive;
    font-weight: 400;
    line-height: 1.2;
    margin-bottom: 2rem;
  }

  .y {
    font-family: 'Eyesome', 'Better Saturday Personal Use', cursive;
    font-size: 4rem;
    display: inline-block;
    transform: translateY(0.5rem);
  }

  .date-container {
    margin-bottom: 1rem;
  }

  .date-line {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1.5rem;
    margin-bottom: 0.5rem;
  }

  .date-label {
    font-size: 3rem;
    color: #000;
    font-family: 'Playfair Display', serif;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .date-number {
    font-size: 6rem;
    color: #000;
    font-family: 'EB Garamond', serif;
    font-weight: 400;
    line-height: 1;
  }

  .date-month {
    font-size: 3rem;
    color: #000;
    font-family: 'Playfair Display', serif;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-top: 0.5rem;
  }

  .venue-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    max-width: 500px;
  }

  .venue-line {
    height: 1px;
    width: 100%;
    margin: 1rem 0;
  }

  .venue-name {
    font-size: 1.8rem;
    color: #000;
    font-family: 'Italiana', serif;
    letter-spacing: 0.05em;
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 4.5rem;
    }

    .y {
      font-size: 2.8rem;
    }

    .date-label {
      font-size: 1.2rem;
    }

    .date-number {
      font-size: 3.5rem;
    }

    .date-month {
      font-size: 1.5rem;
    }

    .venue-name {
      font-size: 1.5rem;
    }
  }

  @media (max-width: 480px) {
    .section-main {
      padding: 1rem;
    }

    h1 {
      font-size: 4.5rem;
    }

    .y {
      font-size: 2.3rem;
    }

    .date-line {
      gap: 1rem;
    }

    .date-label {
      font-size: 2rem;
    }

    .date-number {
      font-size: 3rem;
    }

    .date-month {
      font-size: 2rem;
    }
  }
</style>

